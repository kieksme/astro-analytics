{
  "name": "thinkport-analytics",
  "displayName": "Thinkport Analytics",
  "description": "Shows Google Analytics metrics (Bounce Rate, Views, Users) for Astro Markdown pages inline in VSCode",
  "version": "0.1.0",
  "publisher": "thinkport",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "workspaceContains:**/*.md"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "thinkport-analytics.refresh",
        "title": "Analytics: Refresh Data",
        "icon": "$(sync)"
      },
      {
        "command": "thinkport-analytics.configure",
        "title": "Analytics: Configure"
      }
    ],
    "configuration": {
      "title": "Thinkport Analytics",
      "properties": {
        "thinkportAnalytics.propertyId": {
          "type": "string",
          "default": "364493652",
          "description": "Google Analytics GA4 Property ID"
        },
        "thinkportAnalytics.credentialsPath": {
          "type": "string",
          "default": "",
          "description": "Path to Google Application Default Credentials JSON file"
        },
        "thinkportAnalytics.lookbackDays": {
          "type": "number",
          "default": 30,
          "description": "Number of days to look back for analytics data"
        },
        "thinkportAnalytics.contentRoot": {
          "type": "string",
          "default": "src/content",
          "description": "Root folder of Astro content/pages relative to workspace"
        }
      }
    },
    "menus": {
      "editor/title": [
        {
          "command": "thinkport-analytics.refresh",
          "when": "resourceExtname == .md",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "vscode:prepublish": "npm run compile",
    "package": "vsce package"
  },
  "dependencies": {
    "google-auth-library": "^9.6.3",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/node-fetch": "^2.6.11",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.24.0"
  }
}
